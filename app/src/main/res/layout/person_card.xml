<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    android:elevation="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp"
        android:paddingVertical="20dp"
        >
        <ImageView
            android:id="@+id/icon_card_people"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@drawable/baseline_people_alt_24"/>
        <TextView
            android:id="@+id/tv_type_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/icon_card_people"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            tools:text="Orang Dewasa"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="12sp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tv_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_type_person"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Untuk umur 15 tahun keatas."
            android:fontFamily="@font/poppins_medium"
            android:textSize="12sp"
            android:textColor="@color/black_75"
            />
        <ImageButton
            android:id="@+id/btn_minus"
            android:layout_width="42dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_remove_12"
            android:background="@drawable/background_button"
            android:scaleType="centerInside"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@id/tv_count"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/btn_plus"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="3"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="16sp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/black"
            />
        <ImageButton
            android:id="@+id/btn_plus"
            android:layout_width="42dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_add_12"
            android:background="@drawable/background_button"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>