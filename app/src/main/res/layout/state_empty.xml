<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_wisnu_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/wisnu_empty" />

    <TextView
        android:id="@+id/state_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/state_data_empty_title"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/image_wisnu_empty"
        app:layout_constraintStart_toStartOf="@+id/image_wisnu_empty"
        app:layout_constraintTop_toBottomOf="@+id/image_wisnu_empty" />

    <TextView
        android:id="@+id/state_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/playfair_display_medium"
        android:text="@string/state_data_empty_subtitle"
        android:textAlignment="center"
        android:textColor="@color/black_75"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/state_title"
        app:layout_constraintStart_toStartOf="@+id/state_title"
        app:layout_constraintTop_toBottomOf="@+id/state_title" />
</androidx.constraintlayout.widget.ConstraintLayout>