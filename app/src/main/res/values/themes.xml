<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Wisnu" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="chipCornerRadius">24dp</item>
    </style>

    <style name="Theme.Wisnu" parent="Base.Theme.Wisnu" />

    <style name="WisnuChip" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color_state</item>
        <item name="chipStrokeColor">@color/primary_50</item>
        <item name="chipStrokeWidth">1dip</item>
        <item name="android:textColor">@color/chip_text_color_state</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="WisnuToolbar" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>
</resources>