<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/image_card_Itinerary"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <ImageView
            android:id="@+id/image_poi_Itinerary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@drawable/wisnu_empty"
            />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tv_itinerary_placename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image_card_Itinerary"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="12sp"
        tools:text="Danau Bojongsoang"
        />
    <TextView
        android:id="@+id/tv_itinerary_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_itinerary_placename"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/poppins_medium"
        android:textSize="12sp"
        android:textColor="@color/black_50"
        tools:text="Bandung, Jawa Barat"
        />
</androidx.constraintlayout.widget.ConstraintLayout>