<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".ui.home.HomeFragment">



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_recomendation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recomendation"
        android:layout_marginStart="24dp"
        style="@style/textPoppinsSemi"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/rv_icon"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/tv_all_recomendation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/look_all"
        android:layout_marginEnd="8dp"
        android:textColor="@color/mainColor"
        android:fontFamily="@font/playfair_display_medium"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/rv_icon"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_recomendation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_all_recomendation" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recomendation"
        style="@style/textPoppinsSemi"
        android:textSize="14sp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@+id/rv_recomendation"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/tv_all_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/look_all"
        android:layout_marginEnd="8dp"
        android:textColor="@color/mainColor"
        android:fontFamily="@font/playfair_display_medium"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/rv_recomendation"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_all_event"/>
</androidx.constraintlayout.widget.ConstraintLayout>